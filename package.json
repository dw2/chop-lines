{
  "name": "chop-lines",
  "version": "0.0.0-semantic-release",
  "description": "A React component which truncates lines of HTML.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json && eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "test": "jest -c jest.config.js --coverage",
    "build": "rm -rf ./dist && webpack -p --config ./webpack.config.js --colors --display-error-details",
    "precommit": "tslint -p tsconfig.json && eslint --print-config .eslintrc.js | eslint-config-prettier-check && lint-staged"
  },
  "repository": "git@github.com:dw2/chop-lines.git",
  "author": "Douglas Waltman II <doug@dougwaltman.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "publishConfig": {
    "pkgRoot": "."
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/enzyme": "^3.1.18",
    "@types/jest": "^24.0.5",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.1",
    "@types/webpack-env": "^1.13.7",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "cz-customizable": "^5.3.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^5.14.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "jest-environment-jsdom": "^24.0.0",
    "jest-environment-jsdom-global": "^1.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-hot-loader": "^4.6.5",
    "semantic-release": "^15.13.3",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.6.0",
    "tslint": "^5.12.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  },
  "peerDependencies": {
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "dependencies": {
    "global": "^4.3.2",
    "lodash.debounce": "^4.0.0"
  }
}
